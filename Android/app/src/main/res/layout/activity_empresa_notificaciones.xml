<?xml version="1.0" encoding="utf-8"?>
<!-- LANDA CABALLERO ANGEL -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".EmpresaNotificaciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/logoEmpresa"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:contentDescription="Logo"
                android:src="@drawable/solinx_logo" />

            <TextView
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú"
                android:textSize="18sp"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="|"/>

            <TextView
                android:id="@+id/btnNoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificaciones"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Barra AZUL -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/barra_azul"
            android:layout_marginVertical="12dp" />

        <!-- Tarjeta 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagen_prederterminada"
                    android:contentDescription="Foto del estudiante"
                    android:background="@drawable/imagen_prederterminada" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre: Angel Landa Caballero"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/carrera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carrera Técnica: Programación"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/correo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: angel.landa@gmail.com"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/solicitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Num. Solicitud: #001"
                        android:textColor="#2b859f"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/admitir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admitir"
                            android:textColor="#7ed957"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackground" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:textColor="#CCCCCC"
                            android:paddingHorizontal="4dp" />

                        <TextView
                            android:id="@+id/rechazar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rechazar"
                            android:textColor="#ff5757"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackground" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tarjeta 2 -->
