                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/admitir2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admitir"
                            android:textColor="#7ed957"
