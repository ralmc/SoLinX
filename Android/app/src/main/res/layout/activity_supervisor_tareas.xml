<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".SupervisorTareasActivity">

    <ImageView
        android:id="@+id/logo_top_left"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/solinx_logo"
        android:contentDescription="Logo de la aplicaciÃ³n"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_supervisor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supervisor"
        android:textSize="25sp"
        android:fontFamily="@font/fonts"
        android:textColor="#333333"
        android:textStyle="normal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider_top"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/logo_top_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tab_administradores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administradores |"
            android:textSize="20sp"
            android:textColor="#0E0F0F"
            android:textStyle="normal"
            android:paddingBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tab_tareas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tareas"
            android:textSize="20sp"
            android:textColor="#0E0F0F"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/linea_cyan" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/activity_card_tarea_asignar" android:id="@+id/card_tarea_001" />

            <include layout="@layout/activity_card_tarea_asignar" android:id="@+id/card_tarea_002" />

            <include layout="@layout/activity_card_tarea_asignar" android:id="@+id/card_tarea_003" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>