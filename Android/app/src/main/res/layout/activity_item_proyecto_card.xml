<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/cardBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgProyecto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_proyecto" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvEliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:textColor="@color/statusRechazado"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tvIdProyecto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="# 001"
                    android:textColor="@color/textColorPrimary" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btnEditar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/edit"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvCarreraEnfocada"
            tools:text="Carrera: Sistemas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvNombreEmpresa"
            tools:text="Empresa: TechNova"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/tvFechaInicio"
            tools:text="Inicio: 2023-01-01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary" />

        <TextView
            android:id="@+id/tvFechaFin"
            tools:text="Fin: 2023-06-01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary" />

        <TextView
            android:id="@+id/tvVacantes"
            tools:text="Vacantes: 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary" />

        <TextView
            android:id="@+id/tvUbicacion"
            tools:text="Ubicación: CDMX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary" />

        <TextView
            android:id="@+id/tvObjetivo"
            tools:text="Objetivo..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary" />

        <TextView
            android:id="@+id/tvNombreProyecto"
            tools:text="Proyecto: Gestión"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tvApoyo"
            tools:text="Apoyo: Beca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary" />
    </LinearLayout>
</androidx.cardview.widget.CardView>