<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_vcalumno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Vcalumno">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <LinearLayout
                    android:id="@+id/header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="40dp"
                    android:paddingHorizontal="24dp">

                    <ImageButton
                        android:layout_width="150px"
                        android:layout_height="120px"
                        android:src="@drawable/flechaizq"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:id="@+id/regresar"
                        android:contentDescription="regresar"/>

                    <ImageView
                        android:id="@+id/imgLogoAve"
                        android:layout_width="160px"
                        android:layout_height="155px"
                        android:src="@drawable/solinx_logo"
                        android:contentDescription="Logo" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp">

                        <TextView
                            android:id="@+id/tvBoleta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boleta"
                            android:textSize="20sp"
                            android:textColor="#000000"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="160px"
                        android:layout_height="155px"
                        android:scaleType="fitXY"
                        android:src="@drawable/imagen_prederterminada"/>
                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="16dp"
                    android:background="#1497B9"
                    android:layout_marginHorizontal="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="36dp"
                    android:paddingHorizontal="24dp">

                    <TextView
                        android:id="@+id/tvModo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Modo"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/llModoSelector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <View
                            android:id="@+id/viewModoClaro"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@drawable/circle_light"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginEnd="8dp" />

                        <View
                            android:id="@+id/viewModoOscuro"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@drawable/circle_dark"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="24dp">

                    <TextView
                        android:id="@+id/tvCambiarFoto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cambiar foto de perfil"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/imgPerfil"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/imagen_prederterminada"
                        android:contentDescription="Foto de perfil"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvInfoAlumnado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información del alumnado"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tvPuntosInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..........................."
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status del alumnado"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_marginStart="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tvEmpresa1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre de la Empresa:"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admitido"
                            android:textColor="#008000"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/Pendiente"
                            android:textColor="#FFC300"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/Rechazado"
                            android:textColor="#FF0000"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvEmpresa2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre de la Empresa:"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admitido"
                            android:textColor="#008000"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/Pendiente"
                            android:textColor="#FFC300"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/Rechazado"
                            android:textColor="#FF0000"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPuntosStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..........................."
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="#1497B9"
            android:textSize="30sp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/molgan"
            android:textStyle="bold"
            android:backgroundTint="@android:color/transparent"
            android:padding="0px"/>
        <View
            android:layout_width="190sp"
            android:layout_height="3dp"
            android:background="#1497B9" />
    </LinearLayout>
</LinearLayout>
