<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/cardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_nombre_estudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Estudiante"
            android:textSize="18sp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_boleta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boleta: 20230001"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_carrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingeniería en Software"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_proyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proyecto: Sistema de Gestión"
            android:textSize="14sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_rechazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rechazar"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/statusRechazado"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btn_aprobar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aprobar"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/statusAdmitido"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>