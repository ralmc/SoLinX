                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="Num. Solicitud: #003"
                android:id="@+id/solicitud3"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Admitir"
                    android:textColor="#7ed957"
                    android:id="@+id/admitir3"
                    android:backgroundTint="@android:color/transparent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Rechazar"
                    android:textColor="#ff5757"
                    android:id="@+id/rechazar3"
                    android:backgroundTint="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>