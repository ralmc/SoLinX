<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".MenuSupervisorActivity">

    <LinearLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logo_app"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/solinx_logo"
            android:contentDescription="Logo de la aplicación"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_nombre_empresa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Nombre de la Empresa"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="start"/>

        <ImageView
            android:id="@+id/iv_profile_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/imagen_prederterminada"
            android:contentDescription="Icono de perfil"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <View
        android:id="@+id/divider_top"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú Supervisor"
        android:textSize="24sp"
        android:textColor="#0E0F0F"
        android:textStyle="bold"
        android:fontFamily="@font/fonts"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/divider_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/menu_options_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/option_administradores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administradores"
            android:textSize="20sp"
            android:textColor="#00BCD4"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/icon_admin_scaled"
            android:drawablePadding="16dp" />

        <TextView
            android:id="@+id/option_tareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tareas"
            android:textSize="20sp"
            android:textColor="#00BCD4"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/white"
            android:drawableStart="@drawable/icon_task_scaled"
            android:drawablePadding="16dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>