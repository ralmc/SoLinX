<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_vcalumno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".AlumnoVistaCuenta">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <!-- HEADER -->
            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="40dp"
                android:paddingHorizontal="24dp">

                <!-- Botón Regresar -->
                <ImageButton
                    android:id="@+id/regresar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icono_salida"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:contentDescription="Regresar"/>

                <!-- Logo SoLinX -->
                <ImageView
                    android:id="@+id/imgLogoAve"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/solinx_logo"
                    android:scaleType="fitCenter"
                    android:contentDescription="Logo SoLinX" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <!-- Boleta -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:id="@+id/tvBoleta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023XXXX"
                        android:textSize="18sp"
                        android:textColor="#1497B9"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Avatar/Perfil -->
                <ImageView
                    android:id="@+id/imgPerfil"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagen_prederterminada"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Foto de perfil"/>
            </LinearLayout>

            <!-- BARRA AZUL SEPARADORA -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:background="#1497B9"
                android:layout_marginHorizontal="24dp" />

            <!-- SELECTOR DE MODO (CLARO/OSCURO) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="36dp"
                android:paddingHorizontal="24dp">

                <TextView
                    android:id="@+id/tvModo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modo"
                    android:textColor="#1497B9"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/llModoSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Modo Claro -->
                    <View
                        android:id="@+id/viewModoClaro"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/circle_light"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginEnd="12dp" />

                    <!-- Modo Oscuro -->
                    <View
                        android:id="@+id/viewModoOscuro"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/circle_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- SECCIÓN: INFORMACIÓN DEL ALUMNADO -->
            <TextView
                android:id="@+id/tvInfoAlumnado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información del alumnado"
                android:textColor="#1497B9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp" />

            <!-- Nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre: "
                    android:textColor="#1497B9"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cargando..."
                    android:textColor="#666666"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Correo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo: "
                    android:textColor="#1497B9"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvCorreo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cargando..."
                    android:textColor="#666666"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Escuela -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escuela: "
                    android:textColor="#1497B9"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvEscuela"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cargando..."
                    android:textColor="#666666"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Carrera -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrera: "
                    android:textColor="#1497B9"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvCarrera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cargando..."
                    android:textColor="#666666"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- SECCIÓN: STATUS DEL ALUMNADO -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status de solicitudes"
                android:textColor="#1497B9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp" />

            <TextView
                android:id="@+id/tvPuntosStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando solicitudes..."
                android:textColor="#666666"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- FOOTER: BOTÓN CERRAR SESIÓN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="#1497B9"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/molgan"
            android:background="@android:color/transparent"
            android:padding="8dp"/>

        <View
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:background="#1497B9" />
    </LinearLayout>
</LinearLayout>