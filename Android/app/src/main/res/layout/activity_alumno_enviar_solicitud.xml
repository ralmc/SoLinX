<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".AlumnoEnviarSolicitud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Botón Regresar -->
            <ImageView
                android:id="@+id/btnRegresar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/flechaizq"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="regresar"
                android:padding="8dp" />

            <!-- Logo -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/solinx_logo"
                android:layout_marginStart="16dp" />

            <!-- Espacio flexible -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Boleta y Avatar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/btnboleta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOLETA"
                    android:textSize="14sp"
                    android:textColor="#2b859f"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagen_prederterminada"
                    android:contentDescription="Avatar"
                    android:layout_marginStart="8dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Barra AZUL -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/barra_azul"
            android:layout_marginVertical="12dp" />

        <!-- Tarjeta Principal del Proyecto -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Imagen del Proyecto -->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/solinx_logo"
                    android:contentDescription="Proyecto SoLinX"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Información del Proyecto -->
                <TextView
                    android:id="@+id/prestatario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prestatario: SoLinX"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/fechini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Inicio: 18/10/2025"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/fechfin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Termino: 18/10/2026"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/representante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Representante: Velázquez Reynoso Adrian"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/vacantes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vacantes: 9"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/ubicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicación: Mar Mediterráneo 227, Nextitla, Miguel Hidalgo, 11420 Ciudad de México, CDMX"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/objetivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Objetivo: Crear una aplicación que ayude a los estudiantes a realizar su servicio social y que al mismo tiempo tengan experiencia laboral."
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/justificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Justificación: Ayudar a los alumnos con su servicio social creando una aplicación que facilite el proceso."
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/apoyos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apoyos: Beca de $1000 al mes. Cursos de adaptación"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:layout_marginBottom="16dp" />

                <!-- Botón Enviar Solicitud -->
                <TextView
                    android:id="@+id/btnEnviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENVIAR SOLICITUD"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/barra_azul"
                    android:paddingVertical="16dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>