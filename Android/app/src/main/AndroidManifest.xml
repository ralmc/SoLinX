<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_solinx_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_solinx_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoLinX"
        tools:targetApi="31">

        <!-- SPLASH SCREEN (launcher) -->
        <activity
            android:name=".CargaActivity"
            android:exported="true"
            android:theme="@style/Theme.SoLinX">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MAIN -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- ACTIVIDADES QUE SE ABREN POR INTENT -->
        <activity android:name=".creSesion" android:exported="true" />
        <activity android:name=".iniSesion" android:exported="true" />
        <activity android:name=".MenuSupervisorActivity" android:exported="true" />
        <activity android:name=".CrearEmpresa" android:exported="true" />
        <activity android:name=".AlumnoEnviarSolicitud" android:exported="true" />
        <activity android:name=".AlumnoMenuEmpresas" android:exported="true" />
        <activity android:name=".VistaEmpresas" android:exported="true" />

        <!-- ACTIVIDADES INTERNAS QUE NO SE ABREN POR INTENT DIRECTO -->
        <activity android:name=".menu_super" android:exported="false" />
        <activity android:name=".EmpresaNotificaciones" android:exported="false" />
        <activity android:name=".Vcalumno" android:exported="false" />
        <activity android:name=".SupervisorAdminActivity" android:exported="false" />
        <activity android:name=".SupervisorTareasActivity" android:exported="false" />

    </application>
</manifest>
