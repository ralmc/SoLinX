<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.SoLinX"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_solinx_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_solinx_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoLinX"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name=".CargaActivity"
            android:exported="true"
            android:theme="@style/Theme.SoLinX">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" android:exported="false" />
        <activity android:name=".AlumnoCrearCuenta" android:exported="true" />
        <activity android:name=".IniciarSesion" android:exported="true" />
        <activity android:name=".MenuSupervisorActivity" android:exported="true" />
        <activity android:name=".EmpresaCrear" android:exported="true" />
        <activity android:name=".AlumnoEnviarSolicitud" android:exported="true" />
        <activity android:name=".AlumnoMenuEmpresas" android:exported="true" />
        <activity android:name=".EmpresaVista" android:exported="true" />
        <activity android:name=".GestionProyectoActivity" android:exported="false" />
        <activity android:name=".menu_super" android:exported="false" />
        <activity android:name=".EmpresaNotificaciones" android:exported="false" />
        <activity android:name=".AlumnoVistaCuenta" android:exported="false" />
        <activity android:name=".AprobarSolicitudesAlumnosActivity" android:exported="false" />
        <activity android:name=".AprobarAceptacionesEmpresaActivity" android:exported="false" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

    </application>
</manifest>